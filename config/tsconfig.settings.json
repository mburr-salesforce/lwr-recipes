{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strict": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "declaration": true,
        "sourceMap": true,
        "isolatedModules": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "composite": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "importsNotUsedAsValues": "error",
        "baseUrl": "."
    },
    "exclude": ["node_modules/**", "**/__tests__/**", "**/__benchmarks__/**", "**/build/**", "**/cjs/**"]
}
