{
    "extends": "../../config/tsconfig.settings.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "module": "CommonJS",
        "target": "ES2020",
        "isolatedModules": false,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "webdriverio",
            "wdio-utam-service"
        ]
    },
    "include": [
        "./src/config/**/*.ts",
        "./src/services/**/*.ts",
        "./src/tests/**/*.ts",
        "./src/types/**/*.ts"
    ],
    "exclude": ["build", "./src/**/*spec.ts"]
}
