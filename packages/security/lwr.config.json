{
    "lwc": {
        "modules": [{ "dir": "$rootDir/src/modules" }]
    },
    "routes": [
        {
            "id": "security-base",
            "path": "/",
            "rootComponent": "example/app",
            "routeHandler": "$rootDir/src/routeHandlers/routeHandler.ts"
        },
        {
            "id": "csp-disabled",
            "path": "/csp-disabled",
            "rootComponent": "example/app",
            "routeHandler": ["@lwrjs/security", { "contentSecurityPolicy": false }]
        },
        {
            "id": "multiple-options",
            "path": "/multiple-options",
            "rootComponent": "example/app",
            "routeHandler": ["@lwrjs/security", { "referrerPolicy": false, "xXSSProtection": false }]
        }
    ]
}
