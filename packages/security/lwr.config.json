{
    "lwc": {
        "modules": [{ "dir": "$rootDir/src/modules" }]
    },
    "routes": [
        {
            "id": "security-base",
            "path": "/",
            "rootComponent": "example/app",
            "routeHandler": "$rootDir/src/routeHandlers/routeHandler.ts"
        },
        {
            "id": "csp-disabled",
            "path": "/csp-disabled",
            "rootComponent": "example/app",
            "routeHandler": "secure1"
        },
        {
            "id": "multiple-options",
            "path": "/multiple-options",
            "rootComponent": "example/app",
            "routeHandler": "secure2"
        }
    ],
    "routeHandlers": {
        "secure1": ["@lwrjs/security", { "contentSecurityPolicy": false }],
        "secure2": ["@lwrjs/security", { "referrerPolicy": false, "xXSSProtection": false }]
    }
}
