{
    "extends": "../../config/tsconfig.settings.json",
    "compilerOptions": {
        "outDir": "build",
        "module": "CommonJS",
        "target": "ES2020",
        "isolatedModules": false,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "webdriverio",
            "wdio-utam-service"
        ]
    },
    "include": ["./config/**/*.ts", "./services/**/*.ts", "./tests/**/*.ts", "./types/**/*.ts"],
    "exclude": ["./**/*spec.ts"],
    "references": [{ "path": "../simple-routing" }]
}
