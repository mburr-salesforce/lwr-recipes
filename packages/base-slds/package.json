{
    "name": "base-slds",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "type": "module",
    "types": "build/index.d.ts",
    "main": "build/index.js",
    "files": [
        "build/**/*.js"
    ],
    "scripts": {
        "clean": "rm -rf build && rm -rf __lwr_cache__",
        "build": "node ./scripts/copy-resources.mjs",
        "start": "lwr serve --port 3000",
        "start:prod": "lwr serve --port 3000 --mode prod",
        "start:compat": "lwr serve --port 3000 --mode compat",
        "start:amd": "lwr serve --port 3000 --mode compat",
        "start:prod-compat": "lwr serve --port 3000 --mode prod-compat"
    },
    "dependencies": {
        "lightning-base-components": "^1.9.0-alpha",
        "lwc": "~2.2.0",
        "lwr": "0.5.5"
    },
    "devDependencies": {
        "@salesforce-ux/design-system": "^2.11.6",
        "cpx": "^1.5.0",
        "typescript": "^4.2.2"
    },
    "engines": {
        "node": ">=14.15.4 <17"
    }
}
