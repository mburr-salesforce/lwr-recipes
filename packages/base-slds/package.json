{
    "name": "base-slds",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "type": "module",
    "types": "build/index.d.ts",
    "main": "build/index.js",
    "files": [
        "build/**/*.js"
    ],
    "scripts": {
        "clean": "rm -rf build node_modules __lwr_cache__ site",
        "postinstall": "node ./scripts/copy-resources.mjs",
        "dev": "lwr dev",
        "lwr:build": "lwr build --clean",
        "start": "lwr start",
        "stage": "yarn lwr:build && yarn start",
        "stage:prod-compat": "yarn lwr:build --mode prod-compat && yarn start --mode prod-compat"
    },
    "dependencies": {
        "lightning-base-components": "^1.17.3-alpha",
        "lwr": "^0.9.4"
    },
    "devDependencies": {
        "@salesforce-ux/design-system": "^2.20.1",
        "cpx": "^1.5.0",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=16.0.0 <20"
    },
    "volta": {
        "node": "16.19.1",
        "yarn": "1.22.19"
    }
}
