{
    "name": "base-slds",
    "version": "0.10.2",
    "license": "MIT",
    "private": true,
    "type": "module",
    "types": "build/index.d.ts",
    "main": "build/index.js",
    "files": [
        "build/**/*.js"
    ],
    "scripts": {
        "build": "tsc -b",
        "clean": "rm -rf build node_modules __lwr_cache__ site tsconfig.tsbuildinfo pageObjects tsconfig.tsbuildinfo",
        "postinstall": "node ./scripts/copy-resources.mjs",
        "dev": "lwr dev",
        "lwr:build": "lwr build --clean",
        "start": "lwr start",
        "stage": "yarn lwr:build && yarn start",
        "stage:prod-compat": "yarn lwr:build --mode prod-compat && yarn start --mode prod-compat",
        "test": "yarn postinstall && yarn lwr:build && wdio wdio.conf.ts",
        "test:debug": "DEBUG=true wdio wdio.conf.ts"
    },
    "dependencies": {
        "lightning-base-components": "^1.17.3-alpha",
        "lwr": "0.10.2"
    },
    "devDependencies": {
        "@salesforce-ux/design-system": "^2.20.1",
        "@wdio/cli": "^8.10.4",
        "@wdio/globals": "^8.10.4",
        "@wdio/local-runner": "^8.10.4",
        "@wdio/mocha-framework": "^8.10.4",
        "cpx": "^1.5.0",
        "salesforce-pageobjects": "^3.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "webdriverio": "^8.10.4"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "volta": {
        "node": "16.20.1",
        "yarn": "1.22.19"
    }
}
