{
    "extends": "../../config/tsconfig.settings.json",
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "build/es",
        "isolatedModules": false,
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "webdriverio"
        ],
        "paths": {
            "example/home": ["modules/example/home/home.ts"],
            "example/contact": ["modules/example/contact/contact.ts"],
            "example/products": ["modules/example/products/products.ts"],
            "example/homePageHandler": ["modules/example/homePageHandler/homePageHandler.ts"],
            "example/link": ["modules/example/link/link.ts"],
            "example/namedPageHandler": ["modules/example/namedPageHandler/namedPageHandler.ts"],
            "example/nav": ["modules/example/nav/nav.ts"],
            "example/navItem": ["modules/example/navItem/navItem.ts"],
            "example/recipes": ["modules/example/recipes/recipes.ts"],
            "example/recipesItem": ["modules/example/recipesItem/recipesItem.ts"],
            "example/recipesPageAttributeApplier": [
                "modules/example/recipesPageAttributeApplier/recipesPageAttributeApplier.ts"
            ],
            "example/recipesPageHandler": ["modules/example/recipesPageHandler/recipesPageHandler.ts"],
            "example/rootRouter": ["modules/example/rootRouter/rootRouter.ts"],
            "example/pageHasError": ["modules/example/pageHasError/pageHasError.ts"],
            "lwr/router": [
                "../../../node_modules/@lwrjs/router/build/modules/lwr/router/router.d.ts",
                "../../../node_modules/@lwrjs/router/build/es/modules/lwr/router/router.d.ts"
            ],
            "lwr/routerUtils": [
                "../../../node_modules/@lwrjs/router/build/modules/lwr/routerUtils/routerUtils.d.ts",
                "../../../node_modules/@lwrjs/router/build/es/modules/lwr/routerUtils/routerUtils.d.ts"
            ],
            "lwr/navigation": [
                "../../../node_modules/@lwrjs/router/build/modules/lwr/navigation/navigation.d.ts",
                "../../../node_modules/@lwrjs/router/build/es/modules/lwr/navigation/navigation.d.ts"
            ],
            "lwr/navigationContext": [
                "../../../node_modules/@lwrjs/router/build/modules/lwr/navigationContext/navigationContext.d.ts",
                "../../../node_modules/@lwrjs/router/build/es/modules/lwr/navigationContext/navigationContext.d.ts"
            ],
            "lwr/navigationService": [
                "../../../node_modules/@lwrjs/router/build/modules/lwr/navigationService/navigationService.d.ts",
                "../../../node_modules/@lwrjs/router/build/es/modules/lwr/navigationService/navigationService.d.ts"
            ]
        }
    },
    "exclude": ["build", "pageObjects", "./test/__utam__/*spec.ts"]
}
