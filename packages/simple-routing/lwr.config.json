{
    "lwc": { "modules": [{ "dir": "<rootDir>/src/modules" }] },
    "bundleConfig": { "exclude": ["lwc", "lwr/navigation"] },
    "routes": [
        {
            "id": "app",
            "path": "/",
            "rootComponent": "example/app"
        },
        {
            "id": "named-page",
            "path": "/:namedPage",
            "rootComponent": "example/app"
        },
        {
            "id": "recipes",
            "path": "/:recipes/:title/:ingredients",
            "rootComponent": "example/app"
        }
    ]
}
