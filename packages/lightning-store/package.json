{
    "name": "lightning-store",
    "version": "0.11.0-alpha.7",
    "license": "MIT",
    "private": true,
    "type": "module",
    "types": "build/index.d.ts",
    "main": "build/index.js",
    "files": [
        "build/**/*.js"
    ],
    "scripts": {
        "build": "tsc -b",
        "clean": "rm -rf build node_modules __lwr_cache__ site",
        "dev": "lwr dev",
        "lwr:build": "lwr build --clean",
        "start": "lwr start",
        "stage": "yarn lwr:build && yarn start",
        "stage:prod-compat": "yarn lwr:build --mode prod-compat && yarn start --mode prod-compat"
    },
    "dependencies": {
        "express": "^4.17.1",
        "lwc": "3.1.2",
        "lwr": "0.11.0-alpha.13"
    },
    "devDependencies": {
        "@lwrjs/types": "0.11.0-alpha.13",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "volta": {
        "node": "18.18.2",
        "yarn": "1.22.19"
    }
}
