{
    "name": "lwr-recipes-monorepo",
    "private": true,
    "license": "MIT",
    "description": "LWR Javascript Implementation",
    "main": "index.js",
    "bin": {
        "lwc-pack": "./bin/lwc-pack.js"
    },
    "scripts": {
        "clean": "lerna run clean --stream && lerna exec -- rimraf build/ tsconfig.tsbuildinfo __lwr_cache__ node_modules && lerna clean --yes && rimraf node_modules",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0",
        "format": "prettier --write '{packages,scripts}/**/*.{js,ts,json,md}'",
        "prettier": "prettier --check '{packages,scripts}/**/*.{js,ts,json,md}'",
        "build": "lerna run build --stream && tsc -b",
        "start": "lerna run start --scope simple-routing -- ",
        "test:e2e": "lerna run test:e2e --scope simple-routing-e2e",
        "ready": "yarn && yarn build && yarn lint && yarn prettier && yarn test:e2e && echo \"\n\nPlease test the recipe in your browser before committing\n\n\""
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.3",
        "lerna": "^3.20.2",
        "lint-staged": "^10.1.1",
        "prettier": "^2.0.2"
    },
    "engines": {
        "node": ">=14.15.1 <15"
    },
    "volta": {
        "node": "14.15.0",
        "yarn": "1.22.5"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -e $GIT_PARAMS"
        }
    }
}
