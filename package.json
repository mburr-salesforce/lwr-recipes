{
    "name": "lwr-recipes-monorepo",
    "private": true,
    "license": "MIT",
    "description": "LWR Javascript Implementation",
    "main": "index.js",
    "version": "0.10.0",
    "scripts": {
        "build": "yarn workspaces foreach -pv --topological-dev run build",
        "clean": "yarn workspaces foreach -pv run clean && yarn cache clean --all && rm -rf node_modules",
        "createNewRecipe": "./scripts/init/init-new-package.js",
        "format": "prettier --write '{packages,config,doc}/**/*.{js,ts,json,md}' --config ./config/.prettierrc --ignore-path ./config/.prettierignore",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0 -c ./config/.eslintrc.js --ignore-path ./config/.eslintignore",
        "prettier": "prettier --check '{packages,config,doc}/**/*.{js,ts,json,md}' --config ./config/.prettierrc --ignore-path ./config/.prettierignore",
        "ready": "yarn lint && yarn prettier && yarn install && yarn test && echo \"\n\nPlease test the recipe in your browser before committing\n\n\"",
        "test": "yarn workspaces foreach -v run test",
        "w:build": "yarn workspace ${0} build",
        "w:clean": "yarn workspace ${0} clean",
        "w:install": "yarn workspace ${0} install",
        "w:run": "yarn workspace ${0} run ${1}"
    },
    "workspaces": [
        "packages/*",
        "packages/managed-runtime"
    ],
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.1.1",
        "prettier": "^2.0.2",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "volta": {
        "node": "16.20.1",
        "yarn": "1.22.19"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged --config ./config/lint-staged.config.js",
            "commit-msg": "commitlint -e $GIT_PARAMS --config ./config/commitlint.config.js"
        }
    },
    "packageManager": "yarn@3.6.1"
}
