{
    "name": "lwr-recipes-monorepo",
    "private": true,
    "license": "MIT",
    "description": "LWR Javascript Implementation",
    "main": "index.js",
    "version": "0.11.0-alpha.13",
    "scripts": {
        "build": "yarn workspaces foreach -Apv --topological-dev run build",
        "clean": "yarn workspaces foreach -Apv run clean && yarn cache clean --all && rm -rf node_modules",
        "createNewRecipe": "./scripts/init/init-new-package.js",
        "commitlint": "commitlint",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0",
        "lint:fix": "eslint '**/*.{js,ts}' --fix",
        "lint-staged": "lint-staged",
        "format": "prettier --write '{packages,config,doc}/**/*.{js,ts,json,md}'",
        "husky:init": "husky install",
        "prettier": "prettier --check '{packages,config,doc}/**/*.{js,ts,json,md}'",
        "prettier:fix": "prettier --write '{packages,config,doc}/**/*.{js,ts,json,md}'",
        "ready": "yarn lint && yarn prettier && yarn install && yarn test && echo \"\n\nPlease test the recipe in your browser before committing\n\n\"",
        "test": "yarn workspaces foreach -Av run test",
        "w:build": "yarn workspace ${0} build",
        "w:clean": "yarn workspace ${0} clean",
        "w:install": "yarn workspace ${0} install",
        "w:run": "yarn workspace ${0} run ${1}"
    },
    "workspaces": [
        "packages/*",
        "packages/managed-runtime"
    ],
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.59.11",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.3",
        "prettier": "^3.0.1",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "volta": {
        "node": "18.18.2",
        "yarn": "1.22.19"
    },
    "packageManager": "yarn@4.0.1"
}
