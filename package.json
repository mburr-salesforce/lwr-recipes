{
    "name": "lwr-recipes-monorepo",
    "private": true,
    "license": "MIT",
    "description": "LWR Javascript Implementation",
    "main": "index.js",
    "bin": {
        "lwc-pack": "./bin/lwc-pack.js"
    },
    "scripts": {
        "clean": "lerna run clean --stream && lerna exec -- rimraf build/ tsconfig.tsbuildinfo __lwr_cache__ node_modules && lerna clean --yes && rimraf node_modules",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0",
        "format": "prettier --write '{packages,scripts}/**/*.{js,ts,json,md}'",
        "prettier": "prettier --check '{packages,scripts}/**/*.{js,ts,json,md}'",
        "build": "lerna run build --stream && tsc -b",
        "start": "lerna run start --scope simple-routing -- ",
        "test:e2e": "lerna run test:e2e --scope simple-routing-e2e"
    },
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": ">=14.15.1 <15"
    },
    "volta": {
        "node": "14.15.1",
        "yarn": "1.22.5"
    }
}
