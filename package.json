{
    "name": "lwr-monorepo",
    "private": true,
    "license": "MIT",
    "description": "LWR Javascript Implementation",
    "main": "index.js",
    "bin": {
        "lwc-pack": "./bin/lwc-pack.js"
    },
    "scripts": {
        "clean": "lerna exec -- rimraf build/ tsconfig.tsbuildinfo && lerna clean --yes && rimraf node_modules",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0",
        "format": "prettier --write '{packages,scripts}/**/*.{js,ts,json,md}'",
        "prettier": "prettier --check '{packages,scripts}/**/*.{js,ts,json,md}'",
        "build": "lerna run build --stream && tsc -b",
        "start": "lerna run start --scope lwr-simple-routing -- ",
        "test:e2e": "lerna run test:e2e --scope lwr-simple-routing-e2e -- "
    },
    "workspaces": [
        "simple-routing",
        "simple-routing-e2e"
    ],
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-typescript": "^7.9.0",
        "@lwrjs/core": "0.0.2-alpha29",
        "@lwrjs/loader": "0.0.2-alpha29",
        "@lwrjs/router": "0.0.2-alpha29",
        "@types/jest": "^25.2.1",
        "@wdio/cli": "^6.6.2",
        "@wdio/jasmine-framework": "^6.6.0",
        "@wdio/local-runner": "^6.6.2",
        "@wdio/selenium-standalone-service": "^6.6.2",
        "chromedriver": "^86.0.0",
        "lwr-simple-routing": "0.0.2-alpha15",
        "ts-node": "^9.0.0",
        "typescript": "^3.8.3",
        "utam": "0.0.1-alpha8",
        "wdio-utam-service": "0.0.1-alpha8",
        "webdriverio": "^6.8.0"
    },
    "engines": {
        "node": ">=12.16.0 <15"
    },
    "volta": {
        "node": "14.15.0",
        "yarn": "1.22.5"
    }
}
