{
    "modules": [
        { "dir": "src/modules" },
        { "npm": "lightning-base-components" }
    ],
    "application": {
        "name": "slds-base",
        "root": "example/app"
    },
    "routes": [
        {
            "id": "cards",
            "path": "/cards",
            "source": "<contentDir>/cards.html",
            "layout": "<layoutsDir>/main.html"
        },
        {
            "id": "list",
            "path": "/list",
            "source": "<contentDir>/list.html",
            "layout": "<layoutsDir>/main.html"
        },
        {
            "id": "spinner",
            "path": "/spinner",
            "source": "<contentDir>/spinner.html",
            "layout": "<layoutsDir>/main.html"
        },
        {
            "id": "base",
            "path": "/base",
            "source": "<contentDir>/base.html",
            "layout": "<layoutsDir>/main.html"
        }
    ]
}